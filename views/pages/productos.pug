html 
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title="Productos"
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx", crossorigin="anonymous")
    body
        div(class="m-4 p-5" style="background-color: #eaeaea; height: 40em;")
            h1(class="display-3 mb-5" style="text-align: center; color: blue") 
                strong Vista de Productos
            if products.length > 0
                table(class="table table-dark table-hover")
                    thead
                        tr
                            th(scope='col') Nombre
                            th(scope='col') Precio
                            th(scope='col') Foto
                    tbody
                        each product in products
                            tr
                                td=product.title
                                td=product.price
                                if product.thumbnail.includes(".png") || product.thumbnail.includes(".jpg") || product.thumbnail.includes(".gif") || product.thumbnail.includes(".webp")
                                    td
                                        img(src=product.thumbnail width='50em' height='50em')
                                else 
                                    td=product.thumbnail
            else 
                div(class="alert alert-warning" role="alert")
                    strong No se encontraron productos
            div(class="d-grid gap-2 col-2 mx-auto")
                a(class="btn btn-danger" href="/")  Cargar producto        